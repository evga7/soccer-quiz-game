<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pyo.quizfrontapp">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design.NoActionBar">

        <activity
            android:name=".signup.SignupActivity"
            android:exported="true"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".mainscreen.MainScreenActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".gamescreen.GameScreenActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name=".rankscreen.RankScreenActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name=".morescreen.MoreScreenActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".boardscreen.BoardScreenActivity"
            android:screenOrientation="portrait">>
        </activity>
    </application>

</manifest>