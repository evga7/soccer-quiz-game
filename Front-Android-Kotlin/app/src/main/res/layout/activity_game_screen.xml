<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_quiz"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintHeight_percent="0.7"
        android:background="#FFFFFF"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/mScoreExplainText"
        app:layout_constraintBottom_toTopOf="@+id/adFitView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/readyImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.4"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"></ImageView>

    <ImageView
        android:id="@+id/quizImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintHeight_percent="0.25"
        android:adjustViewBounds="true"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/mGameInfoLayout"></ImageView>

    <TextView
        android:id="@+id/quizTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmfont"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quizImage"></TextView>

    <Button
        android:id="@+id/quizExample1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintHeight_percent="0.2"
        android:fontFamily="@font/bmfont"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_shape2"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/quizExample3"
        app:layout_constraintEnd_toStartOf="@id/quizExample2"
        app:layout_constraintStart_toStartOf="parent">

    </Button>

    <Button
        android:id="@+id/quizExample2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintHeight_percent="0.2"
        android:fontFamily="@font/bmfont"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_shape2"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/quizExample4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/quizExample1">

    </Button>

    <Button
        android:id="@+id/quizExample3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintHeight_percent="0.2"
        android:fontFamily="@font/bmfont"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_shape2"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/adFitView"
        app:layout_constraintEnd_toStartOf="@id/quizExample4"
        app:layout_constraintStart_toStartOf="parent">

    </Button>

    <Button
        android:id="@+id/quizExample4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintHeight_percent="0.2"
        android:fontFamily="@font/bmfont"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_shape2"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/adFitView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/quizExample3">

    </Button>

    <Button
        android:id="@+id/gameScreenStartButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.08"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_shape"
        android:text="게임 시작"
        android:fontFamily="@font/bmfont"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/adFitView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/mScoreBackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4D9FE1"
        android:fontFamily="@font/bmfont"
        android:text="메인으로"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/bmfont"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mScoreExplainText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mScoreBackButton" />

    <TextView
        android:id="@+id/mScoreExplainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result_info"
        android:fontFamily="@font/bmfont"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="#2C89D3"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mScoreText" />
    <com.kakao.adfit.ads.ba.BannerAdView
        android:id="@+id/adFitView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mGameInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#4D9FE1"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/mGameInfoTimer"
            android:fontFamily="@font/bmfont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:gravity="start"
            android:textSize="20dp"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/mGameInfoIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/bmfont"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>