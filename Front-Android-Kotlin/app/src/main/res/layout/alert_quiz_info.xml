<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="300dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/mScorePopupImage"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/no_image" />
    <TextView
        android:id="@+id/mScorePopupTitle"
        android:layout_width="280dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"
        android:textColor="@color/black" />
    <View
        android:id="@+id/mScorePopupTopView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66bdbdbd"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mScorePopupExample1"
                android:layout_marginTop="20dp"
                android:layout_width="280dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/black"></TextView>
            <TextView
                android:id="@+id/mScorePopupExample2"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/mScorePopupExample3"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/mScorePopupExample4"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black" />
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/mScorePopupBottomView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#66bdbdbd" />

    <Button
        android:id="@+id/mScorePopupOkButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        android:text="확인"
        android:textStyle="bold"/>

</LinearLayout>