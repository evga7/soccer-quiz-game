<?xml version="1.0" encoding="utf-8"?>
<!-- alert_popup.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="230dp"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center">

    <TextView
        android:text="문제 개수를 선택해주세요."
        android:fontFamily="@font/bmfont"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="18dp"
        android:id="@+id/popupTextTitle"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="#4D9FE1"
        android:gravity="center"
        />
    <View
        android:background="#66bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:background="@color/white"
                android:fontFamily="@font/bmfont"
                android:textColor="@color/black"
                android:stateListAnimator="@null"
                android:id="@+id/button5Problems"
                android:textStyle="bold"
                android:text="5개"
                android:layout_width="150dp"
                android:layout_height="60dp"/>
            <Button
                android:background="@color/white"
                android:fontFamily="@font/bmfont"
                android:textColor="@color/black"
                android:stateListAnimator="@null"
                android:id="@+id/button10Problems"
                android:textStyle="bold"
                android:text="10개"
                android:layout_width="150dp"
                android:layout_height="60dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:background="@color/white"
                android:fontFamily="@font/bmfont"
                android:textColor="@color/black"
                android:stateListAnimator="@null"
                android:id="@+id/button15Problems"
                android:textStyle="bold"
                android:text="15개"
                android:layout_width="150dp"
                android:layout_height="60dp"/>
            <Button
                android:background="@color/white"
                android:fontFamily="@font/bmfont"
                android:textColor="@color/black"
                android:stateListAnimator="@null"
                android:id="@+id/button20Problems"
                android:textStyle="bold"
                android:text="20개"
                android:layout_width="150dp"
                android:layout_height="60dp"/>

        </LinearLayout>


    </LinearLayout>
    <View
        android:background="#66bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <Button
        android:background="@color/white"
        android:stateListAnimator="@null"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/bmfont"
        android:id="@+id/cancelButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="취소"
        ></Button>
</LinearLayout>